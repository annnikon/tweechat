@{
    ViewBag.Title = "Welcome | Tweechat";
    ViewBag.Css = "../Content/Css/style.css";
}
@model tweechat.Models.User

<div id="toprow">
    <div>
        <img id="logo" src="~/Content/Images/logo.png">
        <img id="search_box_img" src="~/Content/Images/site2_0003s_0002_Base.png">
        <input type="text" id="search_box" placeholder="Поиск" maxlength="17">
    </div>
</div>
<div id="content">
    <form id="sign_in" method="post" action="/Home/LogIn">
        <img src="~/Content/Images/site2_0000s_0000_Rectangle-2.png">
        <input type="email" id="input_area1" name="email" placeholder="Email" required><br><br>
        <input type="password" id="input_area2" name="password" placeholder="Пароль" required><br><br>
        <input type="submit" id="sign_button" value="Войти">
        <a href="#" id='restore_link'>Забыли пароль?</a>
    </form>
    <form id="register" method="post" action="/Home/Register">
        <img src="~/Content/Images/site2_0001s_0000_Rectangle-2.png">
        <p type="text" id='first'>Впервые на Tweechat?</p>
        <p type="text" id='second'>Присоединяйтесь</p>
        <input type="email" id="input_area3" name="email" placeholder="Email" required><br><br>
        <input type="password" id="input_area4" placeholder="Пароль" required><br><br>
        <input type="password" id="input_area5" name="password" placeholder="Подтвердите пароль" required><br><br>
        <input type="submit" id="register_button" value="Зарегистрироваться">
    </form>
</div>
<div id="footer">
    <p id="tc">TC © 2016</p>
    <a href="#" id="about">о компании</a>
    <a href="#" id="terms">правила</a>
    <a href="#" id="developers">разработчикам</a>
    <p id="language">Язык:@Html.Action("getName", "Home", new { email = "haqintosh@gmail.com" })</p>
</div>
<script type="text/javascript">
    $("#search_box").on("focus", function () {
        $("#search_box_img").attr("src", "../content/Images/site2_0004s_0002_Base.png");
    });
    $("#search_box").on("blur", function () {
        $("#search_box_img").attr("src", "../Content/Images/site2_0003s_0002_Base.png");
    })


    var validateEmail = function () {
        var email = $("#input_area3").val();
        var password = $("#input_area5").val();
        $.ajax({
            url: '@Url.Action("CheckEmail","Home")',
            type: "POST",
            data: {
                'email': email,
                'password': password
            },
            dataType: "json",
            success: function (data) {
                if (data.email != null) {
                    alert('email already registered');
                }
            }
        });
    }
    var checkUSer = function () {
        var email = $("#input_area1").val();
        var pass = $("#input_area2").val();
        $.ajax({
            url: '@Url.Action("checkAuthorization","Home")',
            type: "POST",
            data: {
                'email': email,
                'password': pass
            },
            dataType: "json",
            success: function (data) {
                switch (data.result) {
                    case "NoUSer":
                        alert("Такой пользователь еще не зарегистрирован!");
                        break;
                    case "Incorrect":
                        alert("Пароль не верен!");
                        break;
                }
            }
        })
    }
    $("#register_button").on("click", validateEmail);
  //  $("#sign_button").on("click", checkUSer);
</script>