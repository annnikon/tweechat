<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8">
    <title><%=title%></title>
    <link rel="stylesheet" type="text/css" href="/stylesheets/profile.css">
    <script type="text/javascript" src="/javascripts/jquery.min.js"></script>
    <script type="text/javascript" src="/javascripts/jquery-ui.min.js"></script>
</head>
<body scroll="no" alink="#5e81a8" vlink="#5e81a8">
<div id="toprow">
    <div>
        <img id="logo" src="/images/tweechatlogo.png">
        <img id="search_box_img" src="/images/searchbox.png">
        <input type="text" id="search_box" placeholder="Поиск" maxlength="17">
        <nav>
        <ul>
            <li class="drop">
                <b><a href="#"><%=s_name%></a></b>
                <div class="dropdownContain">
                    <div class="dropOut">
                        <div class="triangle"></div>
                        <ul>
                            <li><a href="/profile/<%=s_id%>">Профиль</a></li>
                            <li>Настройки</li>
                            <li><a href="/logout">Выйти</a></li>
                        </ul>
                    </div>
                </div>
            </li>
        </ul>
        </nav>
    </div>
</div>
<div id="content">
    <div id="head">
        <div id="eclipse">
            <img id="profile_photo" src="<%=profile_photo%>" />
            <%if(!myprofile){
                switch(isFriend){
                    case "no":%>
                        <button id="addfriends"></button>
                        <%break;
                    case "yes":%>
                         <img id="friend" src="/images/complete.png"></img>
                         <%break;
                    case "added":%>
                          <!--<img id="friend" src="/images/complete.png"></img>-->
                            <p>added</p>
                          <%break;
                }
            }%>
        </div>
        <output type="text" id="prof_name"><%=name+" "+surname%></output>
    </div>
    <div id="block">
        <div id="News">
            <img id="newsicon" src="/images/news.png" />
            <button class="but" id='newstext'>Новости</button>
        </div>
        <div id="feedback">
            <img id="feedbackicon" src="/images/feedback.png" />
            <button class="but" id='feedbacktext'>Уведомления</button>
        </div>
        <div id="friends">
            <img id="friendsicon" src="/images/friends.png" />
            <button class="but" id='friendstext'>Друзья</button>
        </div>
        <div id="photo">
            <img id="photoicon" src="/images/photo.png" />
            <button class="but" id='phototext'>Фотографии</button>
        </div>
        <div id="groups">
            <img id="groupsicon" src="/images/groups.png" />
            <button class="but" id='groupstext'>Группы</button>
        </div>
        <div id="mail">
            <img id="mailicon" src="/images/mail.png" />
            <button class="but" id='mailtext'>Сообщения</button>
        </div>
    </div>
</div>

<div id="mainPart">
    <div id="news_layout"><%include ./news.ejs%></div>
    <div id="feedback_layout"><%include ./feedback.ejs%></div>
    <div id="mail_layout"><%include ./mail.ejs%></div>
</div>

<div id="footer">
    <p id="tc">TC © 2016</p>
    <a href="#" id="about">о компании</a>
    <a href="#" id="terms">правила</a>
    <a href="#" id="developers">разработчикам</a>
    <p id="language">Язык: <%=language%></p>
</div>
<script type="text/javascript">
    $("#search_box").on("focus", function () {
        $("#search_box_img").attr("src", "/images/searchbox_active.png");
    });
    $("#search_box").on("blur", function () {
        $("#search_box_img").attr("src", "/images/searchbox.png");
    })
    $("#sign_button").on("click", function () {
        var data = {
            'username': $("#input_area1").val(),
            'password': $("#input_area2").val()
        }
        alert(JSON.stringify(data));

    });

    $('#newstext').on("click",function () {
        $('#news_layout').css("visibility","visible");
        $('#feedback_layout').css("visibility","hidden");
        $('#mail_layout').css("visibility","hidden");
    })
    $('#feedbacktext').on("click",function () {
        $('#news_layout').css("visibility","hidden");
        $('#feedback_layout').css("visibility","visible");
        $('#mail_layout').css("visibility","hidden");
    })
    $('#mailtext').on("click",function () {
        $('#news_layout').css("visibility","hidden");
        $('#feedback_layout').css("visibility","hidden");
        $('#mail_layout').css("visibility","visible");
    });
    $('#addfriends').on("click",function () {
        $.ajax({
            type:"POST",
            url:"/profile/add",
            data:"id=<%=id%>",
            success:function (data) {
                if(data.added)
                    $('#addfriends').css('background-image',"url('../images/complete.png')")
            }
        });
    });

</script>
</body>
</html>